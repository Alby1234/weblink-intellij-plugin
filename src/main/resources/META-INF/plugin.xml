<idea-plugin>
    <id>com.github.alby1234.weblinkintellijplugin</id>
    <name>weblink</name>
    <vendor>alby1234</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.alby1234.weblinkintellijplugin.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.alby1234.weblinkintellijplugin.services.MyProjectService"/>
        <applicationService serviceImplementation="com.github.alby1234.weblinkintellijplugin.settings.AppSettingsState" />
        <applicationConfigurable parentId="tools" instance="com.github.alby1234.weblinkintellijplugin.settings.AppSettingsConfigurable"
                                 id="com.github.alby1234.weblinkplugin.settings.AppSettingsConfigurable"
                                 displayName="Weblink plugin settings"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.alby1234.weblinkintellijplugin.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
    <actions>
        <action id="com.github.alby1234.weblinkplugin.actions.OpenInBrowserAction"
                class="com.github.alby1234.weblinkintellijplugin.actions.OpenFileInBrowserAction" text="Open file in git repository"
                description="Opens the current file in the git repository on your browser">
            <add-to-group group-id="FileMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift meta W"/>
        </action>
    </actions>
</idea-plugin>
